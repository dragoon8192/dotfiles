set wildmenu
set encoding=utf-8
set helplang=ja,en

"入力
"Tabの表示幅
    set tabstop=4
"Tabで代わりにSpace
    set expandtab
"Tabで入力される個数
    set softtabstop=4
"インデント幅
    set shiftwidth=4
"改行時の自動インデント
    set smartindent
"クリップボード
    set clipboard=unnamed,autoselect
"backspace
    set backspace=indent,eol

"表示
"構文ハイライト
    syntax enable
"TAB, 行末スペースの表示
    set list
    set listchars=tab:^\ ,trail:~
"括弧の強調
    set showmatch
"タイトル表示
    set title
"行数表示
    set number
"全角文字の幅
    set ambiwidth=double
